                <center>
                  <button type="submit" class="btn btn-teal ">Register</button>                                  
                </center>
              </div>
            </div>
          <% end %>
          
        </div>
        <!-- /content area -->


        <%= render partial: 'layouts/common/footer' %>
        <!-- /footer -->

      </div>
      <!-- /inner content -->

    </div>
    <!-- /main content -->

  </div>